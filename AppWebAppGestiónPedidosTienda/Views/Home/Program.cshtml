@{
} 
@model List<AppWebAppGestiónPedidosTienda.Models.Producto>

<html>
<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>


<body>
    <h1 class="texto-fondo">Actualización Productos</h1>

<div class="orientacion" table>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Descripción</th>

        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="table-primary">@item.Nombre</td>
                <td class="table-primary">@item.Precio</td>
                <td class="table-primary">@item.Descripción</td>
            </tr>
            
        }

    </tbody>

</table>
</div>

</body>
</html>

